@using Application.Users;
@model IEnumerable<UserAddressDto>
@{
    ViewData["Title"] = "نشانی ‌ها";
    Layout = "~/Views/Shared/_LayoutCustomerPanel.cshtml";
}

 
<div class="checkout-section shadow-around">
    <div class="checkout-section-content">
        <div class="row mx-0">
            @foreach (var address in Model)
            {
                <div class="col-xl-3 col-lg-4 col-sm-6 mb-3">
                    <div class="custom-control custom-radio">
                        <input type="radio" id="customRadio1" name="customRadio"
                               class="custom-control-input">
                        <label class="custom-control-label address-select" for="customRadio1">
                            <span class="head-address-select">به این آدرس ارسال شود</span>
                            <span>@address.PostalAddres</span>
                            <span>
                                <i class="fa fa-user"></i>
                                 @address.ReciverName
                            </span>
                            <a href="#" class="link--with-border-bottom edit-address-btn"
                               data-toggle="modal" data-target="#editAddressModal">
                                ویرایش
                                <i class="fa fa-edit"></i>
                            </a>
                        </label>
                    </div>
                </div>

            }
            <div class="col-xl-3 col-lg-4 col-sm-6 mb-3">
                <div class="custom-control custom-radio">
                    <a class="add-address" asp-area="Customers" asp-controller="Address" asp-action="AddNewAddress"  >
                        <i class="fa fa-plus"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

